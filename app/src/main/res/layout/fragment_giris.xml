<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mkatr.fazenderoapp.MainActivity"
    android:background="#008724">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtKayitUserMail"
        android:hint="Email"
        android:background="#004011"
        android:textColorHint="#FFFFFF"
        android:textColor="#ffffff"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_below="@+id/txtSlogan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserPass"
        android:textColorHint="#FFFFFF"
        android:layout_below="@+id/txtKayitUserMail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:background="#004011"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Giriş Yap"
        android:id="@+id/btnGiris"
        android:layout_below="@+id/txtUserPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:background="#8BC34A"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Kayıt Ol"
        android:id="@+id/btnKayit"
        android:layout_below="@+id/btnGiris"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:background="#8BC34A"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="F"
        android:id="@+id/txtSlogan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="100dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp" />


</RelativeLayout>