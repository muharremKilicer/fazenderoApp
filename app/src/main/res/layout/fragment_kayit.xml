<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mkatr.fazenderoapp.MainActivity"
    android:background="#008724">


    <EditText
        android:tag="Kullanıcı adı boş bırakılamaz"
        android:hint="Ad"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtKayitUsername"
        android:background="#004011"
        android:textColorHint="#FFFFFF"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:tag="Kullanıcı soyadı boş bırakılamaz"
        android:hint="Soyad"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtKayitUserSurname"
        android:layout_below="@+id/txtKayitUsername"
        android:background="#004011"
        android:textColorHint="#FFFFFF"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:tag="Telefon numarası boş bırakılamaz"
        android:hint="Telefon"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtKayitUserPhone"
        android:layout_below="@+id/txtKayitUserSurname"
        android:background="#004011"
        android:textColorHint="#FFFFFF"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:tag="Email adresi boş bırakılamaz"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/txtKayitUserMail"
        android:background="#004011"
        android:textColorHint="#FFFFFF"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txtKayitUserPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:tag="Şifre boş bırakılamaz"
        android:hint="Parola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/txtKayitUserPass"
        android:layout_below="@+id/txtKayitUserMail"
        android:background="#004011"
        android:textColorHint="#FFFFFF"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:imeOptions="actionSend"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:id="@+id/btnKayitOl"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:background="#8BC34A"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txtKayitUserPass"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giris Yap"
        android:id="@+id/btnGirisYap"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:background="#8BC34A"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btnKayitOl"
        android:layout_centerHorizontal="true" />
</RelativeLayout>